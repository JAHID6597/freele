<div class="row mt-5">
  <% if (service.length > 0) { %>
  <% service.forEach(singleService => { %>
  <div class="col-lg-3 col-md-6 mb-3 d-flex">
    <div class="card">
      <a
        href="/user/<%= singleService.userId.username %>/service/<%= singleService.slug %>"
        class="serviceProfileLink"
        target="_blank"
      >
        <img
          src="/public/uploads/<%= singleService.thumbnailImage
 %> "
          class="card-img-top"
          height="200"
      /></a>
      <div class="card-body flex-fill">
        <div class="mt-3 mb-4">
          <a
            href="/user/<%= singleService.userId.username %>"
            class="serviceProfileLink"
            target="_blank"
          >
            <% if (singleService.userId.profileImage) { %>
            <img
              class="rounded-circle"
              height="30px"
              src="/public/uploads/<%= singleService.userId.profileImage %>"
            />
            <% } else { %>
            <img
              class="rounded-circle"
              height="30px"
              src="/public/image/default-profile-photo.png"
            />
            <% } %>
            <span class="ms-2"><%= singleService.userId.username%></span></a
          >
        </div>
        <a
          href="/user/<%= singleService.userId.username %>/service/<%= singleService.slug %>"
          class="serviceProfileLink"
          target="_blank"
        >
          <h5 class="card-title">
            <b><%= singleService.serviceTitle.substr(0, 40) + '...' %></b>
          </h5>
          <p class="card-text mt-3">
            <%= truncate(singleService.sanitizeServiceDescription) %>
          </p></a
        >
      </div>
      <div class="card-footer text-muted">
        <span><%= momentTimeFromNow(singleService.createdAt) %></span>
        <span class="float-end"
          ><b>Starting AT $<%= (singleService.pricing.price[0] * 1).toFixed(2) %></b></span
        >
      </div>
    </div>
  </div>
  <% }) %>
  <% } else { %>
    <p class="text-center fs-3 text-muted"><strong>No Services Available</strong></p>
  <% } %>
</div>
