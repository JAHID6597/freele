<div>
  <div class="m-2 mb-4 bg-white p-3">
    <h3 class="mb-3"><b>From Buyer</b></h3>
    <div class="d-flex">
      <div class="flex-shrink-0">
        <a href="/user/<%= jobPost.userId.username %>" target="_blank">
        <% if (jobPost.userId.profileImage) { %>
        <img
          class="rounded-circle"
          height="30"
          width="30"
          src="/public/uploads/<%= jobPost.userId.profileImage %>"
        />
        <% } else { %>
        <img
          class="rounded-circle"
          height="30"
          width="30"
          src="/public/image/default-profile-photo.png"
        />
        <% } %></a>
      </div>
      <div class="flex-grow-1 ms-3">
        <p><%= jobPost.postServiceDetailsDescription %></p>
        <p class="my-0"><b>Budget($): </b><%= jobPost.price.toFixed(2) %></p>
        <p class="my-0"><b>Delivery Day: </b><%= jobPost.deliveryDay %></p>
      </div>
    </div>
  </div>
  <div class="m-2 mb-3 bg-white p-3">
    <h3 class="mb-3"><b>From Seller</b></h3>
    <div class="d-flex">
      <div class="flex-shrink-0">
        <a href="/user/<%= request.requestSender.username %>" target="_blank">
        <% if (request.requestSender.profileImage) { %>
        <img
          class="rounded-circle"
          height="30"
          width="30"
          src="/public/uploads/<%= request.requestSender.profileImage %>"
        />
        <% } else { %>
        <img
          class="rounded-circle"
          height="30"
          width="30"
          src="/public/image/default-profile-photo.png"
        />
        <% } %></a>
      </div>
      <div class="flex-grow-1 ms-3">
        <p><%= request.offerDescription %></p>
        <p class="my-0">
          <b>Offer Price($): </b><%= request.offerPrice.toFixed(2) %>
        </p>
        <p class="my-0">
          <b>Offered Delivery Day: </b><%= request.offerDeliveryDay %>
        </p>
      </div>
    </div>
  </div>
</div>
