<div id="allUsers" class="container-fluid">
  <div class="row">
    <% user.forEach(singleUser => { %>
    <div class="col-md-6">
      <div class="d-flex m-2 bg-white p-3">
        <div class="flex-shrink-0">
            <% if (singleUser.profileImage) { %>
                <a href="/user/<%= singleUser.username %>"><img class="rounded-circle allUserProfileImage" height="150px" width="150px" src="/public/uploads/<%=singleUser.profileImage%>"/></a>
            <% } else { %>
                <a href="/user/<%= singleUser.username %>"><img class="rounded-circle allUserProfileImage" height="150px" width="150px" src="/public/image/default-profile-photo.png"/></a>
            <% }  %>
        </div>
        <div class="flex-grow-1 ms-3 px-2">
          <h4><strong><a href="/user/<%= singleUser.username %>" class="text-decoration-none clr-black"><%= singleUser.username %></a></strong></h4>
          <p><h5><%= singleUser.userBio %></h5></p>
          <h6>Total Services Order: <%= singleUser.getOrders.length %></h6>
          <h6>Total JobPosts Order: <%= singleUser.getJobPostOrders.length %></h6>
          <div class="mt-3">
              <a href="/user/<%= singleUser.username %>/allmyservices"><button class="btn btn-primary m-1 ms-0">Services</button></a>
              <a href="/user/<%= singleUser.username %>/allMyJobPost"><button class="btn btn-success m-1 ms-0">JobPost</button></a>
              <a href="/user/<%= singleUser.username %>/feedbacks"><button class="btn btn-warning m-1 ms-0">FeedBack</button></a>
              <% if (isLogin) { %>
              <% if (sUser.username === singleUser.username) { %>
               <button class="btn btn-danger m-1 ms-0 disabled">Contact</button>
              <% } else { %>
                <a href="/messages/<%=sUser.username%>/<%=singleUser.username%>"><button class="btn btn-danger m-1 ms-0">Contact</button></a>
              <% } } else { %>
                <a href="/signin"><button class="btn btn-danger m-1 ms-0">Contact</button></a>
              <% } %>
          </div>
        </div>
      </div>
    </div>
    <% }) %>
  </div>
</div>
